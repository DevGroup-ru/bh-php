{
    "name": "zxqfox/bh",
    "version": "0.1.0",
    "description": "Template engine. BEMJSON -> HTML processor. PHP port of https://github.com/bem/bh",
    "keywords": [
        "bem",
        "bh",
        "bemjson"
    ],
    "license": "MIT",
    "authors": [
        {
            "name": "Alexej Yaroshevich",
            "email": "alex@qfox.ru"
        }
    ],
    "support": {
        "issues": "https://github.com/zxqfox/bh-php/issues",
        "forum": "http://ru.bem.info/forum/",
        "gitter": "https://gitter.im/bem/talk"
    },
    "require": {
        "php": ">=5.4.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.3.*",
        "phpunit/php-invoker": "dev-master",
        "johnkary/phpunit-speedtrap": "~1.0@dev"
    },
    "minimum-stability": "dev",
    "autoload": {
        "psr-4": { "BEM\\": "src/" }
    },
    "scripts": {
        "test": "./vendor/bin/phpunit"
    },
    "archive": {
        "exclude": [
            "/*",
            "!/LICENSE",
            "!/README.md",
            "!/src"
        ]
    }
}
